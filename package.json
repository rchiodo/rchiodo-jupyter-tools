{
	"name": "rchiodo-jupyter-tools",
	"displayName": "rchiodo-jupyter-tools",
	"description": "Extra tools for developing notebooks in VS code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0-insiders"
	},
    "license": "MIT",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#ffffff",
        "theme": "light"
    },
    "keywords": [
        "jupyter",
        "notebook",
        "ipynb",
        "notebookKernelJupyterNotebook",
        "multi-root ready",
        "python"
    ],
    "categories": [
        "Programming Languages",
        "Other",
        "Extension Packs",
        "Data Science",
        "Machine Learning",
        "Notebooks",
        "Visualization"
    ],
	"activationEvents": [
		"onCommand:jupyter.notebookeditor.openInInteractive",
		"onCommand::jupyter.notebookeditor.openContextualHelp",
        "onNotebook:jupyter-notebook",
        "onNotebook:interactive"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
                "command": "jupyter.notebookeditor.openInInteractive",
                "title": "%jupyter.command.jupyter.openInInteractive.title%",
                "category": "Notebook",
				"icon": "$(edit)",
                "enablement": "notebookType == jupyter-notebook && isWorkspaceTrusted && jupyter.ispythonnotebook"
			},
            {
                "command": "jupyter.notebookeditor.openContextualHelp",
                "title": "%jupyter.command.jupyter.openContextualHelp.title%",
                "category": "Notebook",
                "enablement": "notebookType == jupyter-notebook && isWorkspaceTrusted && jupyter.ispythonnotebook"
            }
		],
		"commandPalette": [
			{
				"command": "jupyter.notebookeditor.openInInteractive",
				"title": "%jupyter.command.jupyter.openInInteractive.title%",
				"category": "Notebook",
				"when": "jupyter.ispythonnotebook && isWorkspaceTrusted"
			},
            {
                "command": "jupyter.notebookeditor.openContextualHelp",
                "title": "%jupyter.command.jupyter.openContextualHelp.title%",
                "category": "Notebook",
                "enablement": "isWorkspaceTrusted && jupyter.ispythonnotebook"
            }
		],
        "views": {
            "jupyter": [
                {
                    "type": "webview",
                    "id": "jupyterContextualHelp",
                    "name": "Contextual Help"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	}
}
